<div id="content-div">
  <h2>Add New Article</h2>
  <form id="new-article-form" action="/articles/new" method="POST">
    <label for="article-title">Article title: </label>
    <input type="text" class="article-input" id="article-title" placeholder="Title" name="article[title]" autofocus /><br/>
    <label for="article-category">Category: </label>
    <select class="article-input" id="article-category" name="article[category]">
      <option value="Human Resources">Human Resources</option>
      <option value="IT">IT</option>
      <option value="Procedures">Procedures</option>
      <option value="Processes">Processes</option>
      <option value="Marketing">Marketing</option>
      <option value="New Employee Info">Onboarding / Getting Started</option>
      <option value="Sales">Sales</option>
    </select><br/>
    <label for="article-content">Article content: (formatted using <a href="https://en.wikipedia.org/wiki/Markdown">markdown</a>)<br/>
    (link redirects to external site)</label>
    <input type="textarea" class="article-input" id="article-content" name="article[content]" />
    <input type="hidden" name="article[editDates]" value="<%= new Date() %>"/>
    <input type="submit" value="Create article"/>
  </form>
</div>
